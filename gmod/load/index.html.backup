    font-family: 'Inter', sans-serif;
    background-color: var(--background);
    color: var(--text);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .loading-container {
    display: flex;
    height: 100vh;
  }

  .section {
    flex: 1;
    padding: 2rem;
    overflow-y: auto;
    position: relative;
  }

  .section:first-child {
    border-right: 2px solid var(--accent1);
  }

  .section-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2rem;
    color: var(--primary);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .rule-card, .staff-card {
    background: var(--secondary);
    padding: 1.5rem;
    border-radius: 10px;
    margin-bottom: 1rem;
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .rule-card h3, .staff-card h3 {
    color: var(--hover);
    margin-top: 0;
  }

  .progress-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--accent1);
    overflow: hidden;
  }

  .progress {
    height: 100%;
    background: var(--primary);
    position: absolute;
    left: -50%;
    width: 50%;
    animation: loading 1.5s infinite ease-in-out;
    box-shadow: 0 0 10px var(--primary);
  }

  @keyframes loading {
    0% {
      left: -50%;
    }
    100% {
      left: 100%;
    }
  }

  .staff-card {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .staff-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
  }

  .staff-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .staff-info h3 {
    margin: 0;
  }

  .staff-role {
    color: var(--hover);
    font-size: 0.9rem;
  }

  .tip-container {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--secondary);
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    width: 80%;
    max-width: 600px;
    box-shadow: 0 0 20px rgba(0,0,0,0.3);
    transition: opacity 0.5s ease-out;
  }

  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--background);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--primary);
    border-radius: 4px;
  }

  @media (max-width: 768px) {
    .loading-container {
      flex-direction: column;
    }
    
    .section:first-child {
      border-right: none;
      border-bottom: 2px solid var(--accent1);
    }
  }
  .audio-controls {
      position: fixed;
      bottom: 20px;
      left: 20px;
      background: rgba(255,255,255,0.1);
      padding: 10px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .audio-controls button {
      background: var(--primary);
      border: none;
      color: white;
      padding: 5px 10px;
      border-radius: 4px;
      cursor: pointer;
      transition: opacity 0.3s;
    }

    .audio-controls button:hover {
      opacity: 0.8;
    }

    #volumeSlider {
      width: 100px;
    }

    .now-playing {
      color: var(--text);
      font-size: 0.8rem;
      margin-right: 10px;
    }
</style>
</head>
