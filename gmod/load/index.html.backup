    // Fonction pour forcer l'autoplay
    function forceAutoplay() {
      const audio = document.getElementById('bgMusic');
      
      // Tentative de lecture
      const playAttempt = setInterval(() => {
        audio.play()
          .then(() => {
            clearInterval(playAttempt);
          })
          .catch(error => {
            console.log("Tentative de lecture automatique...");
          });
      }, 500);
    }

    // Gestion de la musique
    document.addEventListener('DOMContentLoaded', function() {
      const audio = document.getElementById('bgMusic');
      const toggleBtn = document.getElementById('toggleMusic');
      const volumeSlider = document.getElementById('volumeSlider');
      const skipBtn = document.getElementById('skipTrack');
      const nowPlayingText = document.getElementById('nowPlaying');
      // D√©finir le volume √† 25% (0.25)
      audio.volume = 0.15;
      
      // Si vous avez un volumeSlider, mettez √©galement sa valeur √† 25
      if (volumeSlider) {
        volumeSlider.value = 15;
      }

      // ... (rest of the JavaScript code remains the same) ...
      let currentTrackIndex = Math.floor(Math.random() * playlist.length);

      // Fonction pour charger et jouer une piste
      function loadAndPlayTrack(index) {
        const track = playlist[index];
        audio.src = track.src;
        nowPlayingText.textContent = `‚ñ∂Ô∏è ${track.title} - ${track.artist}`;
        audio.load();
        
        // Force la lecture
        forceAutoplay();
      }

      // Fonction pour jouer une piste al√©atoire
      function playRandomTrack() {
        const previousIndex = currentTrackIndex;
        do {
          currentTrackIndex = Math.floor(Math.random() * playlist.length);
        } while (playlist.length > 1 && currentTrackIndex === previousIndex);
        loadAndPlayTrack(currentTrackIndex);
      }
      
      // D√©marrage imm√©diat de la premi√®re piste
      playRandomTrack();

      // Gestion de la fin d'une piste
      audio.addEventListener('ended', () => {
        playRandomTrack();
      });

      // Interaction utilisateur pour d√©bloquer l'audio sur certains navigateurs
      document.addEventListener('click', () => {
        if (audio.paused) {
          forceAutoplay();
        }
      }, { once: true });

      // Bouton muet/non muet
