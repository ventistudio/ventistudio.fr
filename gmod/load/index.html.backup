        if (audio.muted) {
          audio.muted = false;
          toggleBtn.textContent = 'üîá Muet';
        } else {
          audio.muted = true;
          toggleBtn.textContent = 'üîä Non muet';
        }
      });

      // Contr√¥le du volume
